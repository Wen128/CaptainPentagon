<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/textV"
        android:layout_width="377dp"
        android:layout_height="287dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="376dp"
        android:background="@drawable/shape" />


    <TextView
        android:layout_width="363dp"
        android:id="@+id/text"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="388dp"
        android:text="Scanning completed"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="40dp"
        android:background="@drawable/shape_white" />

    <View
        android:layout_width="377dp"
        android:layout_height="310dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape" />

    <TextView
        android:layout_width="361dp"
        android:layout_height="286dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:text="Scanning result"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shape_white" />

    <ImageView
        android:id="@+id/scan"
        android:layout_width="wrap_content"
        android:layout_height="136dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="407dp"
        android:contentDescription="scan"
        android:src="@drawable/scanningc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="161dp"
        android:text="suspicious software"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="295dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="63dp">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold" />
    </ScrollView>

    <ImageView
        android:id="@+id/errormeter"
        android:layout_width="201dp"
        android:layout_height="84dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="193dp"
        android:contentDescription="errorscan"
        android:src="@drawable/errormeter" />

    <ImageView
        android:id="@+id/safemeter"
        android:layout_width="201dp"
        android:layout_height="84dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="191dp"
        android:contentDescription="safescan"
        android:src="@drawable/safemeter" />


</RelativeLayout>