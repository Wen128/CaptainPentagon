<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/blue">

    <TextView
        android:id="@+id/question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_count"
        android:progress="0"
        android:max="20"
        />
    <TextView
        android:id="@+id/score_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>
    <ProgressBar
        android:id="@+id/timeprogress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_count"
        android:progress="0"
        android:max="20"
        android:paddingTop="3dp"
        android:progressBackgroundTint="#ff0000"
        />
    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:layout_below="@id/score_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:layout_marginBottom="32dp"/>
    <Button
        android:id="@+id/option1"
        android:layout_width="395dp"
        android:layout_height="89dp"
        android:layout_below="@id/question_text"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/option2"
        android:layout_width="395dp"
        android:layout_height="89dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/option1"
        android:layout_marginTop="16dp"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/option3"
        android:layout_width="395dp"
        android:layout_height="89dp"
        android:layout_below="@id/option2"
        android:layout_marginTop="16dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="32dp"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/end_button"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/option3"
        android:layout_marginStart="300dp"
        android:layout_marginTop="10dp"
        android:text="End Quiz"/>
</RelativeLayout>