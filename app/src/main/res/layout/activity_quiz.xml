<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue">

    <TextView
        android:id="@+id/question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:text="Question Count"
        android:layout_centerHorizontal="true"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_count"
        android:progress="0"
        android:layout_marginHorizontal="20dp"
        android:max="20"
        android:paddingTop="3dp"

        />
    <TextView
        android:id="@+id/score_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_below="@id/progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Score"
        android:textColor="@color/white"
        />
<!--    <ProgressBar-->
<!--        android:id="@+id/timeprogress_bar"-->
<!--        style="?android:attr/progressBarStyleHorizontal"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/question_count"-->
<!--        android:progress="0"-->
<!--        android:max="20"-->
<!--        android:paddingTop="3dp"-->
<!--        android:layout_marginHorizontal="20dp"-->
<!--        android:progressBackgroundTint="#ff0000"-->
<!--        />-->
    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@id/score_count"
        android:text="What is your name ?"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="15dp"
        android:padding="2dp"
        />

    <Button
        android:id="@+id/option1"
        android:layout_below="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/option2"
        android:layout_below="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/option3"
        android:layout_below="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/end_button"
        android:layout_below="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="100dp"
        android:textColor="@color/black"
        android:text="End Quiz"
        android:textSize="20sp"/>
</RelativeLayout>